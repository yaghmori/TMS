@inherits BaseComponent

<MudDialog>
    <DialogContent>
        <MudPaper Elevation="2" Class="m-n3 pa-1">
            <MudTable Items="@PermissionCollection"
                      MultiSelection="true"
                      Elevation="0"
                      Bordered=false
                      @bind-SelectedItems="SelectedPermission"
                      Filter="new Func<string,bool>(FilterFunc)"
                      FixedHeader=true
                      Height="350px"
                      Dense=true
                      Striped=true
                      Hover=true>
                <ToolBarContent>
                    <MudTextField @bind-Value="Query" Immediate=true Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
                </ToolBarContent>

                <HeaderContent>
                    <MudTh>@_viewLocalizer["SelectAll"]</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd>@context</MudTd>
                </RowTemplate>
            </MudTable>


        </MudPaper>

    </DialogContent>
    <DialogActions>
        <div clas Justify="Justify.FlexEnd" Class="m-2" Spacing="2">

            <MudButton OnClick="Cancel">@_viewLocalizer["Cancel"]</MudButton>
            <MudButton Disabled="@InProcess"
                       OnClick="SaveChanges"
                       ButtonType="ButtonType.Submit"
                       Class="w-85"
                       Variant="Variant.Filled"
                       Color="Color.Primary">
                @if (InProcess)
                {
                    <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                    <MudText Class="ms-2">@_viewLocalizer["Processing"]</MudText>
                }
                else
                {
                    @_viewLocalizer["SaveChanges"]
                }
            </MudButton>
        </div>

    </DialogActions>
</MudDialog>



